version: '3'
services:
 jetty:
  image: jetty:9.3-jre8-alpine
  ports:
   - "80:8080"
  depends_on:
   - mysql
  volumes:
   - ./webapps/:/var/lib/jetty/webapps
  links:
   - mysql:mysql
  networks:
   - scc

 mysql:
  image: mysql:8
  networks:
   - scc
  env_file:
   - ./config/mysql_credentials
  volumes:
   - "./db:/var/lib/mysql"
networks:
 scc: 
